generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  id             String @id @map("_id")
  user_id        String @unique
  active_expires BigInt
  idle_expires   BigInt
  user           User?  @relation(fields: [user_id], references: [id])
}

model Key {
  id              String  @id @map("_id")
  hashed_password String?
  user_id         String? @unique
  user            User?   @relation(fields: [user_id], references: [id])
}

model User {
  id              String    @id @map("_id")
  name            String
  username        String
  role            Role      @default(AGENT)
  risk_percentage Int
  gabe_way        Int
  order           String[]
  agent_order     String[]
  Session         Session[]
  Key             Key[]
  Account         Account[]

  @@index([role])
}

model Account {
  id            String         @id @map("_id")
  user          User?          @relation(fields: [user_id], references: [id])
  user_id       String?        @unique
  website       String
  bookie        String?
  referral      String?
  username      String
  password      String
  ip_location   String
  credit_line   Int
  max_win       Int
  weeklyFigures WeeklyFigure[]

  @@index([username])
}

model WeeklyFigure {
  id               String       @id @map("_id")
  Account          Account?     @relation(fields: [account_id], references: [id])
  account_id       String?
  amount           Float
  transaction_date DateTime
  week_start       DateTime
  stiffed          Boolean      @default(false)
  adjustments      Adjustment[]

  @@index([week_start])
}

model Adjustment {
  id               String        @id @map("_id")
  WeeklyFigure     WeeklyFigure? @relation(fields: [figure_id], references: [id])
  figure_id        String?
  amount           Float
  operation        String
  zero_out         Boolean       @default(false)
  transaction_date DateTime
  week_start       DateTime
}

enum Role {
  AGENT
  ADMIN
}
